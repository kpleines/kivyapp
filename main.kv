#:import MDTopAppBar kivymd.uix.appbar.MDTopAppBar
#:import MDButton kivymd.uix.button.MDButton
#:import MDDialog kivymd.uix.dialog.MDDialog
#:import dp kivy.metrics.dp

ScreenManager:
    MainScreen:

<MainScreen@Screen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"

        # Top App Bar (menubar)
        MDTopAppBar:
            id: top_app_bar
            title: "My KivyMD App"
            right_action_items: [["menu", lambda x: app.open_menu()]]

        # Big empty space
        Widget:

        # Status Bar at the bottom
        BoxLayout:
            size_hint_y: None
            height: dp(30)
            md_bg_color: 0.1, 0.1, 0.1, 1
            MDLabel:
                text: "Status: Ready"
                halign: "center"

# Dialog definitions (all dialogs defined in KV)
<FileDialog@MDDialog>:
    id: file_dialog
    title: "File Menu"
    text: "File Options:\nOption 1\nOption 2\nExit"
    
    MDButton:
        text: "Option 1"
        on_release: root.dismiss()
    MDButton:
        text: "Option 2"
        on_release: root.dismiss()
    MDButton:
        text: "Exit"
        on_release: app.stop()
    

<KonfigurationDialog@MDDialog>:
    id: konfiguration_dialog
    title: "Konfiguration Menu"
    text: "Konfiguration Options:\nOption A\nOption B"
    MDButton:
        text: "Option A"
        on_release: root.dismiss()
    MDButton:
        text: "Option B"
        on_release: root.dismiss()
   

<TableDialog@MDDialog>:
    id: table_dialog
    title: "Table Menu"
    text: "Table Options:\nOption X\nOption Y"
    MDButton:
        text: "Option X"
        on_release: root.dismiss()
    MDButton:
        text: "Option Y"
        on_release: root.dismiss()
    
